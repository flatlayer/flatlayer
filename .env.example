# Application
APP_NAME=Flatlayer
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=flatlayer
DB_USERNAME=
DB_PASSWORD=

# Session and Cache
SESSION_DRIVER=database
CACHE_DRIVER=database

# Queue
QUEUE_CONNECTION=database

# Filesystem
FILESYSTEM_DISK=local

# Jina AI API key for search result re-ranking (https://jina.ai/)
JINA_API_KEY=

# Jina AI models for search (see Jina AI docs for alternatives)
JINA_RERANK_MODEL=jina-reranker-v2-base-multilingual
JINA_EMBED_MODEL=jina-embeddings-v2-base-en

# Secret for GitHub webhook to sync content (set in GitHub repo webhook settings)
GITHUB_WEBHOOK_SECRET=

# Use signed URLs for media assets (true for production, false for local development)
FLATLAYER_MEDIA_USE_SIGNATURES=false

# Content sync configurations
# Format: FLATLAYER_SYNC_[TYPE]="path=/path/to/content --type=[type] --pattern=[glob_pattern]"
# The --type and --pattern options are optional. Default pattern is **/*.md
FLATLAYER_SYNC_POSTS="path=/path/to/posts"
FLATLAYER_SYNC_PAGES="path=/path/to/pages --pattern=**/*.md"
