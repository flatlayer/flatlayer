# Application
APP_NAME=Flatlayer
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=flatlayer
DB_USERNAME=
DB_PASSWORD=

# Session and Cache
SESSION_DRIVER=database
CACHE_DRIVER=database

# Queue
QUEUE_CONNECTION=database

# Filesystem
FILESYSTEM_DISK=local

# OpenAI keys and embedding model
OPENAI_API_KEY=
OPENAI_ORGANIZATION=
OPENAI_SEARCH_EMBEDDING_MODEL=text-embedding-3-small

# Secret for GitHub webhook to sync content (set in GitHub repo webhook settings)
GITHUB_WEBHOOK_SECRET=

# Use signed URLs for media assets (true for production, false for local development)
FLATLAYER_MEDIA_USE_SIGNATURES=false

# Content Repository Configuration
# Format: CONTENT_REPOSITORY_[TYPE]_[SETTING]
# Available settings: PATH, DRIVER (local/s3), KEY, SECRET, REGION, BUCKET (for s3), WEBHOOK_URL, PULL

# Content Repository Configuration
# Local repository example (commented out by default)
#CONTENT_REPOSITORY_POSTS_PATH="/path/to/posts/repository"
#CONTENT_REPOSITORY_POSTS_DRIVER=local
#CONTENT_REPOSITORY_POSTS_WEBHOOK_URL="https://example.com/webhook/posts"
#CONTENT_REPOSITORY_POSTS_PULL=true

# S3 repository example (commented out by default)
#CONTENT_REPOSITORY_DOCS_PATH="content/docs"
#CONTENT_REPOSITORY_DOCS_DRIVER=s3
#CONTENT_REPOSITORY_DOCS_KEY=your-aws-key
